---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import ReactComponent from "../components/ReactComponent.jsx";
import { Button } from "@/components/ui/button";
---

<Layout title="Welcome to Allizon.io, my Digital Garden.">
  <main>
    <h1 class="m-16 underline text-red-500">Allizon.io</h1>

    <ReactComponent testProp={24}>and a test here</ReactComponent>
      <Button className="text-red-500 my-8">Hi there</Button>

    <ul role="list" class="link-card-grid">
      <Card
        href="pixar"
        title="The Pixar Project"
        body="My grand plan to re-watch and write about the entire Pixar feature catalog."
      />
      <Card
        href="articles"
        title="Articles"
        body="Articles, blog posts, whatever. Loose content here."
      />
      <Card
        href="garden"
        title="Digital Garden"
        body="My attempt to finally show my work and learn in public. "
      />
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  footer {
    color: white;
    line-height: 1;
    text-align: center;
  }

  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
